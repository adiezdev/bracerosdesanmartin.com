---
import { Image } from 'astro:assets';
const { img, title, frase} = Astro.props
---
<div class="cursor-pointer">
    <h3 class="text-base font-bold tracking-tighter sm:text-xl mb-2">{title}</h3>
    <Image class="rounded-lg" width={500} height={300} src={ img ? img :"https://placehold.co/500x400/EEEEEE/FFFFFF.png" } alt={frase}/>
    <p class="sans text-sm text-gray-500 mt-2">{frase}</p>
</div>
